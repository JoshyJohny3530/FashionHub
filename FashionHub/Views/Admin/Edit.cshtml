@model FashionHub.Models.Item
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" id="ItemId" name="ItemId" value="@Model.ItemId" class="form-control" />
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="ItemName" value="@Model.ItemName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="Description" class="form-control">@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" step="0.01" id="price" name="Price" value="@Model.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label for="image">Image URL</label>
        <input type="text" id="image" name="ItemImage" value="@Model.ItemImage" class="form-control" />
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <select id="category" name="CategoryId" class="form-control" asp-items="ViewBag.Categories">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
</form>
